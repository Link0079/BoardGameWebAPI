@{
    ViewData["Title"] = "Player Page";
}
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Player</h1>
    </div>
</div>

<div id="playerApp">
    <div class="col">
        <div class="row mx-auto d-block">
            <section v-if="loading" class="text-center">
                <div class="spinner-grow" role="status"></div><strong>Loading..</strong>
            </section>
            <section v-if="hasError" class="alert alert-danger text-center shadow-sm ">
                <p>{{apiErrorInfo}}</p>
            </section>
            <section v-if="hasSuccess" class="alert alert-success text-center shadow-sm">
                <p>{{apiErrorInfo}}</p>
            </section>
        </div>
        <div v-if="!loading" class="row">
            <div class="col-6 mb-4">
                <div v-if="hasPlayedGames">
                    @*<ul class="list-group">
                            <li class="list-group-item" v-for="playedGame in playedGames" v-on:click="GetPlayedGameDetails(playedGame)">
                                <a>{{playedGame.boardGameTitle}}</a>
                            </li>
                        </ul>*@
                    <div class="card" v-for="playedGame in playedGames">
                        <div class="card-header">
                            <h6 class="mb-0">
                                {{playedGame.boardGameTitle}}
                            </h6>
                        </div>
                        <div class="card-body">
                            <p>Gamescores:</p>
                            <ul>
                                <li v-for="gameScore in playedGame.gameScores">
                                    {{gameScore.playerName}}: {{gameScore.score}}
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div v-else>
                    <p>Has no played games yet.</p>
                </div>
            </div>
            <div v-if="currentPlayer" class="col-6">
                <div class="form-group">
                    <label>ID</label>
                    <input class="form-control" v-model="currentPlayer.id" disabled="disabled" />
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input class="form-control" v-model="currentPlayer.name" v-bind:disabled="isDisabledPlayer" />
                </div>
                <div class="form-group">
                    <label>Date of birth</label>
                    <input class="form-control" v-model="currentPlayer.dob" v-bind:disabled="isDisabledPlayer" />
                </div>
                <div class="form-group">
                    <label>Total Playtime</label>
                    <input class="form-control" v-model="currentPlayer.playTimeTotal" v-bind:disabled="isDisabledPlayer" />
                </div>
                <div class="form-group">
                    <label>Most played game</label>
                    <input class="form-control" v-model="currentPlayer.mostPlayedGame" v-bind:disabled="isDisabledPlayer" />
                </div>
                <div class="form-group float-right" v-if="isAuthorized">
                    <button v-on:click="EditPlayer(true)" type="button" class="btn btn-primary">Edit</button>
                    <button v-on:click="SavePlayer" type="button" class="btn btn-success" v-bind:disabled="isDisabledPlayer">Save</button>
                    <button v-on:click="DeletePlayer" type="button" class="btn btn-danger" v-bind:disabled="!isDisabledPlayer">Delete</button>
                    <button v-on:click="isDisabledPlayer = true" type="button" class="btn btn-danger">Cancal</button>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/js/Player.js"></script>
}
