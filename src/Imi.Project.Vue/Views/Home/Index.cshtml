@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="jumbotron text-center">
        <h1 class="display-4">Welcome</h1>
    </div>
</div>

<div id="authenticationApp" class="container">
    <div v-if="isRegisterPage">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Username</label>
                <input type="text" class="form-control" v-model="playerToRegister.userName">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Email</label>
                <input type="email" class="form-control" v-model="playerToRegister.email">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Password</label>
                <input type="password" class="form-control" v-model="playerToRegister.password">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Confirm password</label>
                <input type="password" class="form-control" v-model="playerToRegister.confirmPassword">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Name</label>
                <input type="text" class="form-control" v-model="playerToRegister.name">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Birthday</label>
                <input type="date" class="form-control" v-model="playerToRegister.dob">
            </div>
        </div>
    </div>
    <div v-if="!isRegisterPage">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Username</label>
                <input type="text" class="form-control" v-model="playerToLogin.userName">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label>Password</label>
                <input type="password" class="form-control" v-model="playerToLogin.password">
            </div>
        </div>

    </div>
    <button class="btn btn-success" v-on:click="toLoginOrRegister(loginButton)">{{signButton}}</button>
    <button class="btn btn-primary" v-on:click="wantToLogin">{{loginButton}}</button>
</div>

@section scripts{
    <script src="~/lib/axios/axios.js"></script>
    <script src="~/lib/vue/vue.js"></script>
    <script src="~/js/authentication.js"></script>
}

